<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    app:cardCornerRadius="30dp"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="2dp"
    android:clipChildren="false"
    android:layout_margin="5dp"
    android:clipToPadding="false"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/light_purple">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TableRow>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:padding="10dp"
                android:text="Typing stats"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="3dp"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_weight="1"
                android:text="@string/speed_avg"
                android:textAlignment="center"
                android:textColor="@color/light_grey"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="@string/accuracy"
                android:textAlignment="center"
                android:layout_marginRight="15dp"
                android:textColor="@color/light_grey"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/speedImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:src="@drawable/speed_64" />

                <TextView
                    android:id="@+id/speedData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_alignBottom="@id/speedImage"
                    android:layout_toRightOf="@id/speedImage"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:text="1.2s"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:fontFamily="@font/roboto_black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/speedData"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/roboto"
                    android:text="You were faster than last week!"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/light_grey"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="160dp"
                android:layout_column="1">
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progress_circular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:max="100"
                android:progress="80"
                android:progressDrawable="@drawable/circle_progress_background"
                android:rotation="-90"
                tools:ignore="SpeakableTextPresentCheck,DuplicateClickableBoundsCheck" />

                <TextView
                    android:id="@+id/ProgressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="70%"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_black"/>

            </RelativeLayout>


        </TableRow>


    </TableLayout>
</androidx.cardview.widget.CardView>