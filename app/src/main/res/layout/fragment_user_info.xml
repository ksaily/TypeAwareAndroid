<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".ui.onboarding.UserInfoFragment"
    android:background="@color/white">

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_info_title"
        android:layout_gravity="center"
        android:padding="30dp"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/dark_purple"/>

    <TextView
        android:id="@+id/textview_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_info_intro"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:textSize="22sp"
        android:textColor="@color/dark_purple"/>


    <EditText
        android:id="@+id/userEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/roundstyle"
        android:ems="10"
        android:hint="Email"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:visibility="gone"
        android:padding="8dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_prompt"
        android:textColor="@color/muted_purple"
        android:textSize="18sp"
        android:visibility="gone"
        android:padding="30dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/participantId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/roundstyle"
        android:ems="10"
        android:textColor="@color/dark_grey"
        android:layout_gravity="center"
        android:hint="Your Prolific ID"
        android:inputType="text"
        android:textSize="14sp"
        android:minHeight="48dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prolific_id_is_used_to_verify"
        android:textColor="@color/muted_purple"
        android:textSize="16sp"
        android:padding="10dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_user_info_consent"
        android:textColor="@color/light_purple"
        android:textSize="16sp"
        android:padding="20dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/saveUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/save_user_info"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:background="@drawable/roundstyle"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_purple"
        android:paddingHorizontal="20dp"
        android:layout_marginVertical="20dp"/>
</LinearLayout>