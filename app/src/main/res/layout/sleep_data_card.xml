<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:outlineAmbientShadowColor="@color/dark_purple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="20dp">


        <TextView
            android:id="@+id/FitbitLoginPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_grey"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="91dp"
            android:layout_marginVertical="20dp"
            android:paddingVertical="15dp"
            android:text="To view your sleep data, you need to log in to your Fitbit account"
            android:textAlignment="center"
            android:textSize="18sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/FitbitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#C2B6DF"
            android:padding="10dp"
            android:text="Fitbit Login"
            android:textColor="@color/white" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/sleepDataChart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="2dp"
            android:visibility="visible">
        </com.github.mikephil.charting.charts.LineChart>
    </LinearLayout>

</LinearLayout>